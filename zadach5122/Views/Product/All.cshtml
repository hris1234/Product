@model List<ProductViewModel>

<h1> All Cats Info</h1>
<hr table class="Table table-sm table-hover">
<thread class="thread-dark">
    <tr>
        <th scope="col" Name </th>
        <th scope="col" id </th>
        <th scope="col" Price </th>
        <th scope="col" Quantity </th>
    </tr>
    <th></th>
</thread>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Id</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td><a asp-controller="Product" asp-action="Details" asp-all-route-id="item.Id">Details</a></td>
            <td><a asp-controller="Product" asp-action="Edit" asp-all-route-id="item.Id">Edit</a></td>
            <td><a asp-controller="Product" asp-action="Delete" asp-all-route-id="item.Id">Delete</a></td>
        </tr>
    }
</tbody>
</thread>

